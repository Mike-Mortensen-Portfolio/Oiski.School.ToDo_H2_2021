@page "{id}"
@model Oiski.School.ToDo_H2_2021.UI.Pages.CreateTaskModel
@{
    ViewData[ "Title" ] = "Create Task";
}

<h1 class="text-center">Create a new Task for @Model.Project.Name</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @* The ID and name of the project to add the new task to *@
            <input asp-for="Project.ID" type="hidden" />
            <input asp-for="Project.Name" type="hidden" />

            @* Validation Display *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger" asp-validation-for="Task.Name"></span>

            @* Name Display - Edit *@
            <div class="row">
                <div class="col-md-6">
                    <p>Name: </p>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="Task.Name" />
                </div>
            </div>

            @* Description Display - Edit *@
            <div class="row">
                <div class="col-md-6">
                    <p>Description: </p>
                </div>
                <div class="col-md-6">
                    <textarea rows="10" cols="50" asp-for="Task.Description"></textarea>
                </div>
            </div>

            @* Submit Button Display *@
            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">
                    <input class="btn" style="background-color:green; color:white" type="submit" value="Create Task" />
                </div>
            </div>
        </form>
    </div>
</div>