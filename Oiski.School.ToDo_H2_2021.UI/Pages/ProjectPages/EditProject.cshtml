@page "{id}"
@model Oiski.School.ToDo_H2_2021.UI.Pages.EditProjectModel
@{
    ViewData[ "Title" ] = $"Edit - {Model.Project.Name}";
}

<h1 class="text-center">@Model.Project.Name</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-route-id="@Model.Project.ID">
            @* Validation Display *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span class="text-danger" asp-validation-for="Project.Name"></span>
            @* ID Dislay - Read-only *@
            <div class="row">
                <div class="col-md-6">
                    <p>ID: </p>
                </div>
                <div class="col-md-6">
                    <input readonly="readonly" type="text" asp-for="Project.ID" />
                </div>
            </div>
            @* Name Display - Edit *@
            <div class="row">
                <div class="col-md-6">
                    <p>Name: </p>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="Project.Name" />
                </div>
            </div>
            @* Description Display - Edit *@
            <div class="row">
                <div class="col-md-6">
                    <p>Description: </p>
                </div>
                <div class="col-md-6">
                    <textarea rows="10" cols="50" asp-for="Project.Description"></textarea>
                </div>
            </div>
            @* Status Display - Edit *@
            <div class="row">
                <div class="col-md-6">
                    <p>Status: </p>
                </div>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.Project.Status, new SelectList (Enum.GetValues (typeof (EntryStatus)), "Select Status"))
                </div>
            </div>

            @* Submit Button Display *@
            <div class="row">
                <div class="col-md-6">

                </div>
                <div class="col-md-6">
                    <input class="btn" style="background-color:green; color:white" type="submit" value="Save" />
                </div>
            </div>
        </form>
    </div>
</div>


